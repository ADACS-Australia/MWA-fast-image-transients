#! /bin/bash -l
#SBATCH --export=NONE
#SBATCH -M galaxy
#SBATCH -p workq
#SBATCH --account=courses01
#SBATCH --reservation=courseq
#SBATCH --time=00:30:00
#SBATCH --nodes=1

source /group/mwa/software/module-reset.sh
module use /group/mwa/software/modulefiles
module load MWA_Tools/mwa-sci
module list

set -x

# turn on timestamps
{
base=BASEDIR
datadir="${base}/processing"
obsnum=OBSNUM
flagfile=FLAGFILE

# start calibration
cd ${datadir}/${obsnum}
flagantennae ${obsnum}.ms $( cat ${flagfile} )

} 2> >(awk '{print strftime("%F %T")";",$0; fflush()}') \
  1> >(awk '{print strftime("%F %T")";",$0; fflush()}')

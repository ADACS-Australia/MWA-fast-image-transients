#! /bin/bash -l
#SBATCH --account=mwasci
#SBATCH --partition=workq
#SBATCH --time=04:00:00
#SBATCH --nodes=1
#SBATCH --mem=32gb

aprun='aprun -n 1 -d 20 -b'
base=BASEDIR
datadir=${base}/processing

obsnum=OBSNUM
tres=TRES
fres=FRES

# start task
cd ${base}
python bin/track_task.py start --jobid=${SLURM_JOBID} --start_time=`date +%s`

# figure out the flag files
cd ${datadir}/${obsnum}
$aprun cotter $flagfiles -timeres TRES -freqres FRES *gpubox*.fits \
             -edgewidth 80 -m $OBSNUM.metafits -o OBSNUM.ms

res=$?

if [[ -d OBSNUM.ms ]]
then 
     rm *gpubox*fits *.zip *.mwaf
fi

# finish job
cd ${base}
# finish download
if [[ ${res} -eq 0 ]]
then
  python bin/track_task.py finish --jobid=${SLURM_JOBID} --finish_time=`date +%s`
else
  python bin/track_task.py fail --jobid=${SLURM_JOBID} --finish_time=`date +%s`
fi
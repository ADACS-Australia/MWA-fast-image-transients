ssh galaxy obsnum=${obsnum} dep=${dep} << 'ENDSSH'
calname=CALNAME
calid=CALID


base='/astro/mwasci/phancock/D0009/'
cd ${base}

dep=(`./bin/obs_cotter.sh ${obsnum} ${dep}`)
depend=${dep[3]}

# if we have a calibrator name then this is a calibration obs
# so we need to just calculate the colutions
if [[ ! -z ${calname} ]]
then
  dep=(`./bin/obs_calibrate.sh ${obsnum} ${calname} ${depend}`)
  depend=${dep[3]}

# if we have the calid then this is a normal obs that we need to apply the
# solution to and then image
elif [[ ! -z ${calid} ]]
then
  dep=(`./bin/obs_apply_cal.sh ${obsnum} ${calid} ${depend}`)
  depend=${dep[3]}
  
  dep=(`./bin/obs_image.sh ${obsnum} ${depend}`)
  depend=${dep[3]}
fi
ENDSSH

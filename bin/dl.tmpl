#! /bin/bash -l
#SBATCH --account=mwasci
#SBATCH --partition=copyq
#SBATCH --time=01:00:00
#SBATCH --nodes=1
#SBATCH --mem=32gb

aprun='aprun -n 1 -d 8 -b'
base=BASEDIR
datadir=${base}/processing

obsnum=OBSNUM

# start download
cd ${base}
python bin/track_task.py start --jobid=%A --start_time=`date +%s`

cd ${datadir}
aprun obsdownload.py -o ${obsnum}

res=$?
cd ${base}
# finish download
if [[ $?{res} -eq 0 ]]
then
  python bin/track_task.py finish --jobid=%A --finish_time=`date +%s`
else
  python bin/track_task.py fail --jobid=%A --finish_time=`date +%s`
fi

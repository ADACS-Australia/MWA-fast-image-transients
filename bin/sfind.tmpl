#! /bin/bash -l
#SBATCH --export=NONE
#SBATCH -M galaxy
#SBATCH -p workq
#SBATCH --account=mwasci
#SBATCH --time=10:00:00
#SBATCH --nodes=1

function bane_aegean {

if [[ ! -e ${1%%.fits}_bkg.fits} ]]
then 
    BANE ${1} --compress
    test_fail $?
fi

if [[ ! -e ${1%%.fits}_comp.fits} ]]
then
    aegean --autoload ${1} --table=${1} --island --negative
    test_fail $?
fi
}

{
set -x
#memory in GB
mem=$( echo "$SLURM_MEM_PER_NODE / 1000" | bc )

base=BASEDIR
datadir=${base}/processing
obsnum=OBSNUM

cd ${datadir}/${obsnum}

# files that need to be processed
prefix="${obsnum}-"
suffix="-pbcorr-I.fits"


# find the BMAJ/BMIN/BPA from the lr (cleaned) image
image2m="${prefix}2m${suffix}"
stats=( `gethead ${image2m} BMAJ BMIN BPA` )
bmaj=${stats[0]}
bmin=${stats[1]}
bpa=${stats[2]}

# process the 2m image
bane_aegean ${image2m}

} 2> >(awk '{print strftime("%F %T")";",$0; fflush()}' >&2) > >(awk '{print strftime("%F %T")";",$0; fflush()}')

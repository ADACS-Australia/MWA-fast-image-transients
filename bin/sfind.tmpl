#! /bin/bash -l
#SBATCH --export=NONE
#SBATCH -M galaxy
#SBATCH -p workq
#SBATCH --account=mwasci
#SBATCH --time=10:00:00
#SBATCH --nodes=1

source /group/mwa/software/module-reset.sh
module use /group/mwa/software/modulefiles
module load aegean
module list

{
set -x

base=BASEDIR
datadir=${base}/processing
obsnum=OBSNUM

cd ${datadir}/${obsnum}

prefix="${obsnum}-"
suffix="-pbcorr-I.fits"


image2m="${prefix}2m${suffix}"

# process the image
BANE ${image2m} 
aegean --autoload ${image2m} --table=${image2m} --island --negative --cores 2

} 2> >(awk '{print strftime("%F %T")";",$0; fflush()}' >&2) > >(awk '{print strftime("%F %T")";",$0; fflush()}')
